{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@app": ["App.tsx"],
      "@config": ["config/index.ts"],
      "@apiConfig": ["config/api.ts"],
      "@routes": ["config/routes.ts"],
      "@graphQl/*": ["api/graphql/*"],
      "@graphQlClient": ["api/graphql/GraphqlClient.ts"],
      "@providers/*": ["providers/*"],
      "@components/*": ["components/*"],
      "@containers/*": ["containers/*"],
      "@pages/*": ["pages/*"],
      "@layouts/*": ["layouts/*"],
    }
  },
  "include": [
    "src"
, "scripts/ts/setupTests.ts"  ],
  "exclude": [
    "src/**/*.story.mdx",
    "src/**/*.story.@(js|jsx|ts|tsx)",
    "src/**/*.stories.mdx",
    "src/**/*.stories.@(js|jsx|ts|tsx)",
  ]
}
